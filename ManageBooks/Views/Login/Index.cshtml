
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <META charset="utf-8" />
    <META http-equiv="X-UA-Compatible" content="IE=edge">
    <META name="viewport" content="width=device-width, initial-scale=1">
    <META name="description" content="">
    <META name="author" content="">
    <!-- Bootstrap Core CSS -->
    <LINK href="~/Content/bootstrap-3.1.1/css/bootstrap.min.css" rel="stylesheet">
    <LINK href="~/Content/Assets/js/Login.js" rel="stylesheet">
    <script src="~/Content/Assets/js/Login.js"></script>
    <!-- MetisMenu CSS -->
    @*<LINK href="../vendor/metisMenu/metisMenu.min.css" rel="stylesheet">*@

    <!-- Custom CSS -->
    @*<LINK href="../dist/css/sb-admin-2.css" rel="stylesheet">*@

    <!-- Login CSS -->
    <style>
        label.error {
            color: red;
        }
    </style>
    <link href="~/Content/MyStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Register</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" id="login-form">
                            <fieldset>
                                <div class="form-group">
                                    <input id="email" class="form-control" placeholder="E-mail" name="email" type="email"  autofocus>
                                </div>
                                <div class="form-group">
                                    <input id="password" class="form-control" placeholder="Password" name="password" type="password" value="" >
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button href="#" id="btnLogin" type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                                <div class="form-group label-click">
                                    <label>
                                        <a href="~/Register/Index">Click here to Register</a>
                                    </label>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        @Scripts.Render("~/Content/Assets/vendor/jquery/jquery.min.js")
        @Scripts.Render("~/Content/Assets/js/Login.js")
        @Scripts.Render("~/Content/Assets/js/Validation.min.js")
    </div>
</body>
</html>
