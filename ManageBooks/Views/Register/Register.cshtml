
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Register</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <p class="errorName"></p>
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" id="username" placeholder="User Names" name="username" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="email" placeholder="E-mail" name="email" type="email" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="password" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" id="repassword" placeholder="RE Password" name="repassword" type="password" value="">
                                </div>
                                <a href="#" class="btn btn-lg btn-success btn-block" id="btnRegister">Register</a>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

